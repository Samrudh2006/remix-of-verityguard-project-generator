# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# API Configuration
API_PREFIX=/api
API_VERSION=v1

# Security
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=10

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database (example URLs - update based on your choice)
DATABASE_URL=postgresql://user:password@localhost:5432/verityguard
MONGODB_URL=mongodb://localhost:27017/verityguard
REDIS_URL=redis://localhost:6379

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-password
EMAIL_FROM=noreply@verityguard.com

# Cloud Storage (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=

# External APIs
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
